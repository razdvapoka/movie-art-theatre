$td = 0.7s

.footer
  transition: height $td ease
  &Content
    height: pxToRem(100)
  a
    transition: opacity 0.2s ease

.footerBlack
  height: 25vh

.footerOk
  height: pxToRem(100)

.overlay
  transition: background-color $td ease

.overlayOk
  background-color: transparent
  pointer-events: none

.overlayBlack
  transition: background-color $td ease
  background-color: black


.igLogo
  width: pxToRem(10.83)
  height: pxToRem(10.83)
.fbLogo
  width: pxToRem(7.22)
  height: pxToRem(15.47)
.vkLogo
  width: pxToRem(16.15)
  height: pxToRem(9.22)

.input::-webkit-input-placeholder
  color: white
  opacity: 0.5

.input::-moz-placeholder
  color: white
  opacity: 0.5

.input:-ms-input-placeholder
  color: white
  opacity: 0.5

.input:-moz-placeholder
  color: white
  opacity: 0.5

.input
  border-bottom: pxToRem(2) solid rgba(255,255,255,0.5)
  transition: border-color 0.2s ease
  &:focus
    border-color: white

.successMessage
  top: pxToRem(95)
  bottom: pxToRem(95)
