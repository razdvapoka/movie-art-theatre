.item
  &Image
    height: pxToRem(515)
  &Button::after
    content: ""
    display: block
    position: absolute
    left: 50%
    transform: translateX(-50%)
    bottom: pxToRem(-7)
    width: pxToRem(11)
    height: pxToRem(2)
    background-color: black
    transition: width 0.3s ease
  &ButtonActive::after
    width: pxToRem(40)
  &Button + &Button
    margin-top: pxToRem(12.5)
