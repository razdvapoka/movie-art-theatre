html
  font-size: ($ROOT_FONT_SIZE / $CANONIC_SCREEN_WIDTH_M * 100) vw
  +desktop()
    font-size: ($ROOT_FONT_SIZE / $CANONIC_SCREEN_WIDTH * 100) vw

html,
body
  font-family: CoFoSans-Medium, Helvetica, sans-serif
  font-weight: normal
  color: black

:link:hover
  text-decoration: underline

:focus
  outline: none !important

.item-enter
  opacity: 0

.item-enter-active
  opacity: 1
  transition: opacity 300ms ease-in
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%

.item-exit
  opacity: 1

.item-exit-active
  opacity: 0
  transition: opacity 300ms ease-in

.fade-enter
  opacity: 0

.fade-enter-active
  opacity: 1
  transition: opacity 200ms ease-in

.fade-exit
  opacity: 1

.fade-exit-active
  opacity: 0
  transition: opacity 200ms ease-in

